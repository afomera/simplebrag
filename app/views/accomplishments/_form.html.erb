<%= form_with(model: accomplishment) do |form| %>
  <% if accomplishment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(accomplishment.errors.count, "error") %> prohibited this accomplishment from being saved:</h2>

      <ul>
        <% accomplishment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :focus_area_id %>
    <%= form.select :focus_area_id, options_from_collection_for_select(Current.user.focus_areas, :id, :name, form.object.focus_area_id) %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.rich_text_area :description %>
  </div>

  <div>
    <%= form.label :completed_at, style: "display: block" %>
    <%= form.datetime_field :completed_at %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
